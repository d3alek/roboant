#!/usr/bin/env python

import socket

import pygame
from pygame.locals import *

from twisted.internet import protocol, reactor
from twisted.internet.task import LoopingCall
from twisted.protocols.basic import LineReceiver

import qrcode

screenWidth = 400 
screenHeight = 530 

SCREEN_SIZE = (screenWidth, screenHeight)
SERVER_PORT = 1234

name = 'RoboAnt'

pygame.init()

screen = pygame.display.set_mode(SCREEN_SIZE)
pygame.display.set_caption(name)
pygame.joystick.init()
joysticks = [pygame.joystick.Joystick(x) for x in range(pygame.joystick.get_count())]
axisX = 0
axisY = 0
DELTA_MIN = 0

toSendLeftWheelVal = 0
toSendRightWheelVal = 0

for joystick in joysticks:
    name = joystick.get_name().lower()
    if name.find('accelerometer') != -1:
        continue
    joystick.init()
    print "Initialized Joystick", joystick.get_name()

mProtocol = None

class AntRobotControl(LineReceiver):
    def lineReceived(self, line):
        print line

class AntRobotControlFactory(protocol.Factory):
    def buildProtocol(self, addr):
        global mProtocol
        print "Proto built"
        mProtocol = AntRobotControl() 
        return mProtocol

reactor.listenTCP(SERVER_PORT, AntRobotControlFactory())


def findMyIP():
    s = socket.socket(socket.AF_INET, socket.SOCK_DGRAM)
    s.connect(("gmail.com",80))
    sockname = s.getsockname()[0]
    s.close()
    return sockname

def sendWheels(speedL, speedR):
    if mProtocol != None:
        print "Sending", speedL, speedR
        mProtocol.sendLine('l' + str(int(speedL)) + 'r' + str(int(speedR)))

def sendRecord(record):
    if mProtocol != None:
        if record:
            mProtocol.sendLine('record on')
        else:
            mProtocol.sendLine('record off')

def sendNavigation():
    if mProtocol != None:
        mProtocol.sendLine('ai')

def moveLeftWheel(speed):
    global toSendLeftWheelVal
    toSendLeftWheelVal = speed

def moveRightWheel(speed):
    global toSendRightWheelVal
    toSendRightWheelVal = speed



axis4 = 0

leftDown = rightDown = upDown = downDown = False
forwardSpeed = 0
left = False
right = False

def events_tick():
    global axisX, axisY, DELTA_MIN, axis4, leftDown, rightDown, upDown, downDown
    global forwardSpeed, left, right
    change4 = False
    changeX = False
    changeY = False
    speed = 100
    forward = False
    backward = False

    for event in pygame.event.get():
        if event.type == QUIT:
            pygame.quit()
            reactor.stop()
        elif event.type == KEYDOWN:
            if event.key == K_ESCAPE:
                pygame.event.post(pygame.event.Event(QUIT))
            if event.key == K_RIGHT:
                rightDown = True
                left = True
            if event.key == K_LEFT:
                leftDown = True
                right = True
            if event.key == K_UP:
                upDown = True
                forward = True
            if event.key == K_DOWN:
                downDown = True
                backward = True
            if event.key == K_r:
                sendRecord(True)
            if event.key == K_s:
                sendRecord(False)


        elif event.type == KEYUP:
            if event.key == K_RIGHT:
                rightDown = False
                left = False
            if event.key == K_LEFT:
                leftDown = False
                right = False
            if event.key == K_UP:
                upDown = False 
                forward = False 
            if event.key == K_DOWN:
                downDown = False 
                backward = False 

        elif event.type == JOYBALLMOTION:
            print "JOYBALLMOTION"

        elif event.type == JOYHATMOTION:
            print "JOYHATMOTION ", event.hat, event.value
            lOrR, fOrB = event.value
            if fOrB == 1:
                forward = True 
                #sendRecord(True)
            elif fOrB == -1:
                backward = True 
                #sendRecord(False)
            if lOrR == 1:
                left = True
                right = False
            elif lOrR == -1:
                right = True
                left = False
            else:
                left = right = False


        elif event.type == JOYBUTTONDOWN:
            print "JOYBUTTONDOWN"
            print event.button
            if event.button == 1:
                sendRecord(True)
            if event.button == 0:
                sendRecord(False)
            if event.button == 10:
                sendNavigation()

        elif event.type == JOYBUTTONUP:
            print "JOYBUTTONUP" 
            print event.button
        elif event.type == JOYAXISMOTION:
            val = int(event.value * 400)
            print "JOYAXISMOTION", event.axis, val
            if event.axis == 0 and abs(axisX - val) >= DELTA_MIN:
                print "JOYAXISMOTION X", event.axis, val
                axisX = val
                changeX = True
            if event.axis == 1 and abs(axisY - val) >= DELTA_MIN:
                print "JOYAXISMOTION Y", event.axis, val
                axisY = val
                changeY = True
            if event.axis == 2 and abs(axis4 - val) >= DELTA_MIN:
                print "JOYAXISMOTION 4", event.axis, val
                axis4 = -val
                change4 = True
        elif event.type == JOYBALLMOTION:
            print "JOYBALLMOTION"

    if forward:
        print "Setting forwarSpeed", speed
        forwardSpeed = speed
    elif backward:
        print "Setting forwarSpeed", 0
        forwardSpeed = 0


    if left:
        if forwardSpeed == 0:
            moveLeftWheel(80)
            moveRightWheel(-80)
        else:
            moveLeftWheel(forwardSpeed)
            moveRightWheel(0)
    elif right:
        if forwardSpeed == 0:
            moveLeftWheel(-80)
            moveRightWheel(80)
        else:
            moveRightWheel(forwardSpeed)
            moveLeftWheel(0)
    else:
        moveLeftWheel(forwardSpeed)
        moveRightWheel(forwardSpeed)

    #if (changeX or change4) and not (axis4 == 0 and not change4):
    #    if abs(axis4) < DELTA_MIN:
    #        axis4 = 0
    #    #ratio = 0.5 + axisX / 800.
    #    ratio = axisX / 400.
    #    left = int((1 + ratio) * axis4)
    #    if left > 400:
    #        left = 400 
    #    right = int((1 - ratio) * axis4)
    #    if right > 400:
    #        right = 400
    #    moveLeftWheel(left/2)
    #    moveRightWheel(right/2)
    #elif axis4 == 0:
    #   moveLeftWheel(axisX/4.) 
    #   moveRightWheel(-axisX/4.) 
    #else:
    #    toSendLeftWheelVal = 0
    #    toSendRightWheelVal = 0

    #if leftDown:
    #    moveRightWheel(100)
    #if rightDown:
    #    moveLeftWheel(100)

    #if upDown:
    #    moveRightWheel(100)
    #    moveLeftWheel(100)
    
    #if downDown:
    #    moveRightWheel(-100)
    #    moveLeftWheel(-100)
    


def send_tick():
    global toSendRightWheelVal, toSendLeftWheelVal 

    sendWheels(toSendLeftWheelVal, toSendRightWheelVal)

mIP = findMyIP()
qrFile = open('qrIP.png', 'wb')
qrcode.make(mIP + ":" + str(SERVER_PORT)).save(qrFile);
qrFile.close()

def qrcode_tick():
    if not mProtocol:
        screen.fill((0, 0, 0))
        qrImage = pygame.image.load('qrIP.png')
        screen.blit(qrImage, (0, 0))
        pygame.display.update()

    
tick = LoopingCall(events_tick)
tick.start(0.01)

tick2 = LoopingCall(send_tick)
tick2.start(0.3)

tick3 = LoopingCall(qrcode_tick)
tick3.start(1.0)

reactor.run()


